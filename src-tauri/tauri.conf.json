
{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"productName": "SmartGallery",
	"version": "2.1.0",
	"identifier": "com.smartgallery.app",
	"build": {
		"beforeBuildCommand": "npm run sveltekit:build",
		"beforeDevCommand": "npm run sveltekit:dev",
		"devUrl": "http://localhost:5173",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "SmartGallery - AI Media Gallery",
				"width": 1200,
				"height": 800,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"category": "Productivity",
		"copyright": "Â© 2025 Biagio Maffettone",
