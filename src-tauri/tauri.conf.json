		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [],
		"externalBin": [],
		"linux": {
			"deb": {
				"depends": []
			}
		},
		"macOS": {
			"frameworks": [],
			"entitlements": null,
			"exceptionDomain": "",
			"providerShortName": null,
			"signingIdentity": null
		},
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": ""
		}
